<%= form_for(recipe) do |f| %> 
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <br>
    <%= f.collection_check_boxes :ingredient_id, Ingredient.all, :id, :name %> 
        <%= f.fields_for :ingredients.build do |ingredients_fields| %>
        <br>
        <br>
        or create a new ingredient: 
        <%= ingredients_fields.text_field :name %>
    <% end %>
    <br>
    <br>

    <%= f.submit %>
<% end %>